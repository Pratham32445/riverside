generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id                           String         @id @default(uuid())
  name                         String
  email                        String         @unique
  password                     String?
  notifications                Notification[]
  transcriptionCaptionLanguage Languages      @default(ENGLISH)
  subscription                 PLAN           @default(FREE)
  createdAt                    DateTime       @default(now())
  updatedAt                    DateTime       @updatedAt
}

model Podcast {
  Id        String    @id @default(uuid())
  name String
  usersCnt  Int       @default(1)
  message   Message[]
  duration  Int       @default(60)
  createdAt DateTime  @default(now())
}

model Notification {
  Id        String   @id @default(uuid())
  message   String
  userId    String
  user      User     @relation(fields: [userId], references: [Id])
  createdAt DateTime @default(now())
}

model Message {
  Id        String   @id @default(uuid())
  message   String
  userId    String
  podcast   Podcast  @relation(fields: [userId], references: [Id])
  createdAt DateTime @default(now())
}

enum Languages {
  ENGLISH
}

enum PLAN {
  FREE
  MONTLY
  PREMIUM
}
